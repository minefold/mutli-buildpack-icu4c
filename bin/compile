#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir>

set -e
set -o pipefail

build=$(cd "$1/" && pwd)
cache=$(cd "$2/" && pwd)
url="http://download.icu-project.org/files/icu4c/50.1.1/icu4c-50_1_1-src.tgz"

function indent() {
  c='s/^/       /'
  case $(uname) in
    Darwin) sed -l "$c";;
    *)      sed -u "$c";;
  esac
}

env | indent

if [ -d $cache/icu4c ]
then
  echo "-----> Building icu4c from cache"
else
  echo "-----> Building icu4c"

  mkdir -p $cache
  cd $cache

  curl $url 2>&1 | tar xz | indent

  # Build

  cd icu/source
  chmod +x runConfigureICU configure install-sh

  ./runConfigureICU Linux | indent
  make | indent

  # Cleanup
  cd $HOME

  mv $cache/icu/source $cache/icu4c
  rm -rf $cache/icu
fi

cp -r $cache/icu4c $build/vendor/icu4c

echo "-----> Installing .profile.d/icu4c.sh"

mkdir -p $build/.profile.d

cat << PROFILE > $build/.profile.d/icu4c.sh
#!/usr/bin/env bash
PATH=\$PATH:\$HOME/vendor/icu4c/bin
PROFILE

echo "-----> Installed icu4c"
